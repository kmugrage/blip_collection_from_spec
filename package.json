  "description": "Technology Radar Blip Submission Application with AI-powered coaching",
  "author": "Thoughtworks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thoughtworks/tech-radar-blip-submission.git"
  },
  "bugs": {
    "url": "https://github.com/thoughtworks/tech-radar-blip-submission/issues"
  },
  "homepage": "https://github.com/thoughtworks/tech-radar-blip-submission#readme",
  "keywords": [
    "technology-radar",
    "thoughtworks",
